<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt')]" position="replace">
            <div class="pos-receipt">
                <t t-if="!env.services.pos.config.is_custom_receipt">
                    <!-- Template Original de Odoo -->
                    <ReceiptHeader data="props.data.headerData"/>
                    <OrderWidget lines="props.data.orderlines" t-slot-scope="scope">
                        <Orderline line="scope.line"/>
                    </OrderWidget>
                </t>
               <t t-else="">
    <!-- Contenedor invisible -->
                    <div style="display:none;">
                        <t t-esc="env.services.pos.config.receipt_design[1]" />
                    </div>
                    <!-- Template DinÃ¡mico -->
                    <t t-component="templateComponent" t-props="templateProps"/>
                </t>
            </div>
        </xpath>
    </t>
</templates>

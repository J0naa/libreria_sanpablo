<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_replace_header_block"
              inherit_id="account.report_invoice_document"
              priority="300">

   <xpath expr="(//t[@t-call='web.external_layout']//div[@class='row'])[1]"
       position="replace">

    <div class="row mb-1" style="font-size:13px; line-height:1.35;">

        <!-- ========= CLIENTE ========= -->
        <div class="col-6">
            <strong>Cliente</strong><br/>

            <span t-field="o.partner_id.name"/><br/>

            <t t-if="o.partner_id.city">
                <span t-field="o.partner_id.city"/>,
            </t>
            <t t-if="o.partner_id.country_id">
                <span t-field="o.partner_id.country_id.name"/>
            </t><br/>

            <t t-if="o.partner_id.vat">
                <strong>NIT:</strong>
                <span t-field="o.partner_id.vat"/>
            </t>
        </div>

        <!-- ========= DTE ========= -->
        <div class="col-6" t-if="o.move_type == 'out_invoice'">
            <strong>Datos de Facturación Electrónica (DTE)</strong><br/>

            <strong>Serie:</strong>
            <span t-esc="o.gt_dte_serie or '-'"/><br/>

            <strong>Número:</strong>
            <span t-esc="o.gt_dte_numero or '-'"/><br/>

            <strong>Autorización:</strong>
            <span t-esc="o.gt_dte_auth_number or '-'"/><br/>

            <strong>Fecha envío:</strong>
            <span t-esc="o.gt_fecha_envio or '-'"/><br/>

            <span style="font-size:11px; font-style:italic;">
                Este documento es una representación impresa de un Documento Tributario Electrónico
            </span><br/>

            <strong>Certificador:</strong>
            DIGIFACT SERVICIOS, SOCIEDAD ANÓNIMA –
            <strong>NIT:</strong> 7745482-0
        </div>

    </div>

</xpath>
    </template>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document_add_dte_block"
              inherit_id="account.report_invoice_document"
              priority="220">

        <!-- BLOQUE DTE ANTES DE LOS DATOS DE FACTURA -->
        <xpath expr="//div[@id='informations']/div[1]" position="before">

            <t t-if="o.move_type == 'out_invoice'">

                <div class="col-12 mb-2"
                     style="
                        background:#f5f7f8;
                        border-left:4px solid var(--o-company-primary-color);
                        padding:10px 12px;
                        font-size:12px;
                     ">

                    <!-- TITULO -->
                    <div style="font-weight:bold; margin-bottom:6px;">
                        Datos de Facturación Electrónica (DTE)
                    </div>

                    <!-- GRID DTE -->
                    <div class="row">

                        <div class="col-6">
                            <strong>Serie:</strong>
                            <span t-esc="o.gt_dte_serie or '-'"/>
                        </div>

                        <div class="col-6">
                            <strong>Número:</strong>
                            <span t-esc="o.gt_dte_numero or '-'"/>
                        </div>

                        <div class="col-6 mt-1">
                            <strong>Autorización:</strong>
                            <span t-esc="o.gt_dte_auth_number or '-'"/>
                        </div>

                        <div class="col-6 mt-1">
                            <strong>Fecha envío:</strong>
                            <span t-esc="o.gt_fecha_envio or '-'"/>
                        </div>

                    </div>

                    <hr style="margin:8px 0;"/>

                    <!-- MENSAJE LEGAL -->
                    <div style="font-size:11px; font-style:italic; color:#555;">
                        Este documento es una representación impresa de un Documento Tributario Electrónico
                    </div>

                </div>

            </t>

        </xpath>

    </template>

</odoo>
